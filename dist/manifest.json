{
  "name": "CodeChef Problem Page Prettifier",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "CodeChef Problem Page Prettifier",
  "icons": {
      "512": "logo512.png"
  },
  "browser_action": {
      "default_icon": "logo512.png",
      "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.codechef.com/*/problems/*"],
      "js": ["./content.js"],
      "all_frames": false,
      "run_at": "document_end"
    }
  ],
  "optional_permissions": [
    "<all_urls>"
  ]
}
